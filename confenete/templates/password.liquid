{% comment %}
  The share buttons share the home page URL. The share text is grabbed from the store
  meta description.
{% endcomment %}
<style>
  .template-password {
    margin: 0;
    color: #fff;
    background: #3F3F3F;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 5%;
  }

  .template-password ul {
    padding: 0;
    margin: 0;
    margin-top: 1rem;
    list-style: none;
  }

  .template-password__container {
    position: relative;
    top: -3rem;
  }

  h1 {
    text-align: center;
  }

  h1, h2, h3, h4, h5 {
    font-weight: 400;
    font-family: var(--font-heading);
  }

  h4 {
    font-size: 1.4rem;
  }

  .contact-form-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .contact-form {
    text-align: center;
  }

  .input-container {
    max-width: 350px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  input[type="email"],
  button[type="submit"] {
    font-family: var(--font-body);
    margin: 1rem 0;
    border: 0;
    border-radius: 0;
    background: white;
    color: #2d2d2d;
  }

  input[type="email"] {
    border-bottom: 1px solid #fff;
    padding: 0.5rem;
    width: 250px;
    text-align: center;
  }

  input[type="email"]::-webkit-input-placeholder { 
    color:#3F3F3F;
  }
  input[type="email"]::-moz-placeholder {
    color:#3F3F3F;
  }
  input[type="email"]:-ms-input-placeholder {
    color:#3F3F3F;
  }
  input[type="email"]:-moz-placeholder { 
    color:#3F3F3F;
  }

  button[type="submit"]  {
    padding: 0.5rem 2rem;
    margin-top: 0;
    border: 1px solid #C48B9D;
    cursor: pointer;
    background: #C48B9D;
    transition: all 0.3s ease;
    font-size: 1rem;
    color: #fff;
  }

  button[type="submit"]:hover {
    background: transparent;
  }

  .site-footer__social {
    display: flex;
    justify-content: space-around;
    max-width: 100px;
    margin-left: auto !important;
    margin-right: auto !important;
  }

  .site-footer__social a {
    transition: all 0.3s ease;
  }

  .site-footer__social a:hover {
    opacity: 0.5;
  }

  .site-footer__social path {
    fill: white;
  }

  .site-footer__social circle {
    fill: white;
  }

</style>

{% section 'header' %}

{% layout 'password' %}

<div class="contact-form-container">
{% form 'customer' %}

  {{ form.errors | default_errors }}

  {% if form.posted_successfully? %}
    <ul class="form-success">
      <li>{{ 'general.password_page.signup_form_success' | t }}</li>
    </ul>
  {% else %}
    <h4>{{ 'general.password_page.signup_form_heading' | t }}</h4>
    <input type="hidden" name="contact[tags]" value="prospect, password page">
    {% comment %} <label for="email">
      {{ 'general.password_page.signup_form_email_label' | t }}
    </label> {% endcomment %}
    <div class="input-container">
      <input type="email"
        name="contact[email]"
        id="Email"
        spellcheck="false"
        autocomplete="off"
        autocapitalize="off"
        placeholder="{{ 'general.password_page.signup_form_email_placeholder' | t }}">
      <button type="submit" name="commit" class="button">
        {{ 'general.password_page.signup_form_submit' | t }}
      </button>
    </div>
  {% endif %}
{% endform %}
</div>

{% include 'social-links' %}

{% comment %} 
<a href="#Login">
  {% include 'icon-lock' %}
  {{ 'general.password_page.password_link' | t }} &rarr;
</a> {% endcomment %}
