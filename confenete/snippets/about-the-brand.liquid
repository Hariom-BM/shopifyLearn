
{% assign vendor = product.vendor | capitalize %}
{% assign vendor_description = shop.metafields.vendors.about_the_brand[vendor] %}

{% if vendor_description %}
  <div class="about-the-brand wrapper">
    <div class="about-the-brand__container">
      <div class="about-the-brand__start">
        <h3 class="underline">About the Brand</h3>
      </div>
      <div class="about-the-brand__end">
        {{ vendor_description }}
      </div>
    </div>
  </div>
{% endif %}