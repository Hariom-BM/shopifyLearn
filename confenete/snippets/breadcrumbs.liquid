{% unless template == 'index' or template == 'list-collections' %}
  <div
    class="breadcrumb-navigation"
    role="navigation"
    aria-label="breadcrumbs"
    itemscope
    itemtype="http://schema.org/BreadcrumbList"
  >
    <div class="wrapper">
      <span itemprop="itemListElement" class="text" itemscope itemtype="http://schema.org/ListItem">
        <a href="{{shop.url}}" title="Home" itemprop="item">
          <span itemprop="name" class="text">Home</span>
          <meta itemprop="position" content="1">
        </a>
      </span>

      {% if template contains 'page' %}
        <span aria-hidden="true">&rsaquo;</span>
        <span itemprop="itemListElement" class="text" itemscope itemtype="http://schema.org/ListItem">
          <a href="{{ page.url }}" title="{{ page.title }}" itemprop="item">
            <span itemprop="name" class="text">{{ page.title }}</span>
            <meta itemprop="position" content="2">
          </a>
        </span>

      {% elsif template contains 'product' %}
        {% if collection.url %}
          <span aria-hidden="true">&rsaquo;</span>
          <span itemprop="itemListElement" class="text" itemscope itemtype="http://schema.org/ListItem">
            <a href="{{url}}" title="{{ collection.title }}" itemprop="item">
              <span itemprop="name" class="text">{{ collection.title }}</span>
              <meta itemprop="position" content="2">
            </a>
          </span>
        {% endif %}
        <span aria-hidden="true">&rsaquo;</span>
        <span itemprop="itemListElement" class="text" itemscope itemtype="http://schema.org/ListItem">
          <a href="{{product.url}}" title="{{ product.title }}" itemprop="item">
            <span itemprop="name" class="breadcrumb--truncate text">{{ product.title }}</span>
            <meta itemprop="position" content="2">
          </a>
        </span>
      {% elsif template contains 'collection' and collection.handle %}
        <span aria-hidden="true">&rsaquo;</span>
        {% if current_tags %}
          {% capture url %}/collections/{{ collection.handle }}{% endcapture %}
          <span itemprop="itemListElement" class="text" itemscope itemtype="http://schema.org/ListItem">
            <a href="/collections/" title="{{ collection.title }}" itemprop="item">
              <span itemprop="name" class="text">{{ collection.title }}</span>
              <meta itemprop="position" content="3">
            </a>
          </span>
          <span aria-hidden="true">&rsaquo;</span>
          <span>{{ current_tags | join: ' + ' }}</span>
        {% else %}
          <span itemprop="itemListElement" class="text" itemscope itemtype="http://schema.org/ListItem">
            <a href="/collections/" title="{{ collection.title }}" itemprop="item">
              <span itemprop="name" class="text">{{ collection.title }}</span>
              <meta itemprop="position" content="2">
            </a>
          </span>
        {% endif %}
        {% for tag in current_tags %}
          {% assign is_advanced_tag = false %}
          {% assign cat = tag | split: '_' | first %}
          {% unless cat == tag %}
            {% if cat_array contains cat %}
              {% assign is_advanced_tag = true %}
              <span>
                {{ tag | remove_first: cat | remove_first: '_' }}
              </span>
            {% endif %}
          {% endunless %}

          {% if is_advanced_tag == false %}
            <span>
              {{ tag }}
            </span>
          {% endif %}

          {% unless forloop.last %}
            <span>+</span>
          {% endunless %}
        {% endfor %}
      {% elsif template == 'blog' %}
        <span aria-hidden="true">&rsaquo;</span>
        {% if current_tags %}
          <span itemprop="itemListElement" class="text" itemscope itemtype="http://schema.org/ListItem">
            <a href="{{blog.url}}" title="{{ blog.title }}" itemprop="item">
              <span itemprop="name" class="text">{{ blog.title }}</span>
              <meta itemprop="position" content="2">
            </a>
          </span>
        {% endif %}
      {% elsif template == 'article' %}
        <span aria-hidden="true">&rsaquo;</span>
        <span itemprop="itemListElement" class="text" itemscope itemtype="http://schema.org/ListItem">
          <a href="{{blog.url}}" title="{{ blog.title }}" itemprop="item">
            <span itemprop="name" class="text">{{ blog.title }}</span>
            <meta itemprop="position" content="2">
          </a>
        </span>
        <span class="divider" aria-hidden="true">&rsaquo;</span>
        <span itemprop="itemListElement" class="text" itemscope itemtype="http://schema.org/ListItem">
          <span itemprop="name">{{ article.title }}</span>
          <meta itemprop="position" content="3">
        </span>
      {% else %}
        <span aria-hidden="true">&rsaquo;</span>
        <span itemprop="itemListElement" class="text" itemscope itemtype="http://schema.org/ListItem">
          <meta itemprop="position" content="2">
        </span>
      {% endif %}
    </div>
  </div>
{% endunless %}
