
{% for block in section.blocks %}
 {% if block.type == 'image-columns' %}
<!-------------------Image Column Begin--------------------->
 {% if block.settings.first_image != blank or block.settings.second_image != blank or block.settings.block-heading != blank %}
   <div class="Images_column_section">
<div class="wrapper">
<h2>{{block.settings.block-heading}}</h2>

<div class="two_column_images">
  {% if block.settings.first_image != blank %}
  <div class="left_column">
    {% comment %}
    {% if block.settings.image-1-heading != blank %}
      <div class="vertical_heading">
    <h3>{{block.settings.image-1-heading}}</h3>
      </div>
      {% endif %}
     {% endcomment %}
     {% if block.settings.first_image != blank %}
<a href="{{block.settings.btn-link-1}}">
       <img class="lazyload" data-src="{{ block.settings.first_image | img_url: 'master' }}" loading="lazy"/>
</a>
    {% endif %}
    {% if block.settings.btn-link-1 != blank %}
      <h3>
  <a href="{{block.settings.btn-link-1}}" class="btn">{{block.settings.first_btn}}</a>
      </h3>
    {% endif %}   
  </div>
  {% endif %}
  {% if block.settings.second_image != blank %}
   <div class="right_column">
     {% comment %}
     {% if block.settings.image-2-heading != blank %}
       <div class="vertical_heading">
     <h3>{{block.settings.image-2-heading}}</h3>
       </div>
     {% endif %}
    {% endcomment %}
    {% if block.settings.second_image != blank %}
      <a href="{{block.settings.btn-link-2}}" >
<img class="lazyload" data-src="{{ block.settings.second_image | img_url: 'master' }}" loading="lazy"/>
      </a>
       {% endif %}
     {% if block.settings.btn-link-2 != blank %}
       <h3>
  <a href="{{block.settings.btn-link-2}}" class="btn">{{block.settings.second_btn}}</a>
       </h3>
    {% endif %} 
</div>
  {% endif %}
</div>
</div>
   </div>
{% endif %}
<!-------------------Image Column End --------------------->
{% endif %}

{% endfor %}




