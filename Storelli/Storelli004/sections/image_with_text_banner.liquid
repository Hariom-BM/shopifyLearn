   <div id="section-storelli-banner">
        <div class="st_container">
            <div class="banner-container">
                <div class="banner-text">
                    <div class="content">
                        <div class="reviews">
                          {% if section.settings.review_star_image != blank %}
                            <div class="review-img">
                                <img src="{{ section.settings.review_star_image | img_url: 'master' }}"
                                    alt="star_img">
                            </div>
                          {% endif %}
                          {% if section.settings.review-text != blank %}
                            <div class="review-text">{{ section.settings.review-text }}</div>
                          {% endif %}
                        </div>
                        <div class="text-container">
                          {% if section.settings.Heading != blank %}
                            <h2 class="text-head">{{ section.settings.Heading }}</h2>
                          {% endif %}
                          {% if section.settings.description != blank %}
                            <p class="para">{{ section.settings.description }}</p>
                            {% endif %}
                            {% if section.settings.banner_button_text != blank %}
                            <div class="btn">
                                <a href="{{ section.settings.banner_button_url }}">{{ section.settings.banner_button_text }}</a>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="banner-image">
                    <img src="{{ section.settings.banner_image | img_url: 'master' }}" alt="img">
                </div>
            </div>
        </div>
    </div>
{% schema %}
  {
    "name": "Banner",
    "settings": [ 
          {
           "type" : "image_picker",
           "id" : "banner_image",
           "label": "Banner Image"  
          },
          {
           "type" : "image_picker",
           "id" : "review_star_image",
           "label": "Review Star Image"  
          },
          {
           "type" : "text",
           "id" : "review-text",
           "label": "Review Text"  
          },
          {
           "type" : "textarea",
           "id" : "Heading",
           "label": "Heading"  
          },
          {
           "type" : "textarea",
           "id" : "description",
           "label": "Description"  
          },
          {
           "type" : "text",
           "id" : "banner_button_text",
           "label": "Banner Button Text"  
          },
          {
           "type" : "url",
           "id" : "banner_button_url",
           "label": "Banner Button URL"  
          },
          {
          "type": "range",
          "id": "desktop_heading_size",
          "min": 13,
          "max": 72,
          "step": 1,
          "unit": "px",
          "label": "Heading size In Desktop",
          "default": 48
          },
          {
          "type": "range",
          "id": "mobile_heading_size",
          "min": 13,
          "max": 45,
          "step": 1,
          "unit": "px",
          "label": "Heading Size On Mobile",
          "default": 36
         }
    ],
    "presets": [
      {
        "name": "Banner",
        "settings": {}
      }
    ]
  }
{% endschema %}

