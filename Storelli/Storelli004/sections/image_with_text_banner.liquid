   #section-storelli-banner .banner-container {
    display: flex;
    justify-content: center;
}

 #section-storelli-banner .banner-container .banner-text {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 60px 15px 30px;
    width: 50%;
    background-color: #242424;
    color: #fff;
}
#section-storelli-banner .banner-container .banner-text .text-container .btn {
    padding-left: 0;
}
 #section-storelli-banner .banner-container .banner-text .content {
    max-width: 515px;
    margin: auto;
   padding-bottom: 3em;
}

 #section-storelli-banner .banner-container .banner-text .reviews {
    display: flex;
    gap: 5px;
}

 #section-storelli-banner .banner-container .banner-text .reviews .review-img {
    max-width: 103.11px;
}

 #section-storelli-banner .banner-container .banner-text .reviews .review-img img {
    width: 100%;
}

 #section-storelli-banner .banner-container .banner-text .reviews .review-text {
    color: #FFF;
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: 140%;
    /* 25.2px */
    letter-spacing: 0.36px;
}

 #section-storelli-banner .banner-container .banner-text .text-container .text-head {
    color: #FFF;
    font-size: {{section.settings.desktop_heading_size}}px;
    font-style: italic;
    font-weight: 700;
    line-height: 110%;
    padding: 16px 0px;
    margin-bottom: 0;
    letter-spacing: 0.48px;
    text-transform: uppercase;
}

 #section-storelli-banner .banner-container .banner-text .text-container .para {
    color: #BCBCBC;
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: 140%;
    max-width: 413px;
}

 #section-storelli-banner .banner-container .banner-text .text-container .btn>a {
    color: #0F0F0F;
    text-align: center;
    font-size: 14px;
    font-style: normal;
    font-weight: 500;
    line-height: 24px;
    border-radius: 2px;
    margin-top: 8px;
    padding: 12px 60px;
    background-color: #fff;
    display: inline-block;
    text-decoration: none;
    text-transform: uppercase
}

 #section-storelli-banner .banner-container .banner-image {
    width: 50%;
}
 #section-storelli-banner .banner-container .banner-image img {
    width: 100%;
}

