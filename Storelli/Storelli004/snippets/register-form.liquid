<h2 class="sign-title">{{ 'customer.register.title' | t }}</h3>

{% form 'create_customer' %}
    <div class="form-group">
        <label class="visually-hidden" for="register-first-name">{{ 'customer.register.first_name' | t }}</label>
        <input type="text" name="customer[first_name]" id="register-first-name" 
            class="form-control form-control-xl"
            placeholder="{{ 'customer.register.first_name' | t }}" 
            value="{% if form.first_name %}v{{ form.first_name }}{% endif %}" 
            spellcheck="false" autocomplete="off" autocapitalize="off"
        />
    </div>

    <div class="form-group">
        <label class="visually-hidden" for="register-last-name">{{ 'customer.register.last_name' | t }}</label>
        <input type="text" name="customer[last_name]" id="register-last-name" 
            class="form-control form-control-xl"
            placeholder="{{ 'customer.register.last_name' | t }}"
            value="{% if form.last_name %}v{{ form.last_name }}{% endif %}"
            spellcheck="false" autocomplete="off" autocapitalize="off"
        />
    </div>

    <div class="form-group">
        <label class="visually-hidden" for="register-email">{{ 'customer.register.email' | t }}</label>
        <input type="email" name="customer[email]" id="register-email" 
            class="form-control form-control-xl {% if form.errors contains 'email' %}input-error{% endif %}"
            placeholder="{{ 'customer.register.email' | t }}"
            value="{% if form.email %}{{ form.email }}{% endif %}" 
            spellcheck="false" autocomplete="off" autocapitalize="off"
        />
    </div>

    <div class="form-group">
        <label class="visually-hidden" for="register-password">{{ 'customer.register.password' | t }}</label>
        <input type="password" name="customer[password]" id="register-password"
            class="form-control form-control-xl {% if form.errors contains 'password' %}input-error{% endif %}"
            placeholder="{{ 'customer.register.password' | t }}"
            spellcheck="false" autocomplete="off" autocapitalize="off"
        />
    </div>

    {%- if form.errors and template == 'customers/register' -%}
        <div class="sign-error alert alert-light mb-6" role="alert">
            {{ form.errors | default_errors }}
        </div>
    {%- endif -%}

    <input type="submit" class="btn btn-dark btn-storelli sign-button mt-3" value="{{ 'customer.register.submit' | t }}">

{% endform %}
