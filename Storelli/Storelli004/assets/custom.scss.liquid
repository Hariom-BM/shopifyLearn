/*==============
HOME CAROUSEL
==============*/

.home-hero .carousel h1 {
  font-style: italic;
  padding-bottom: 90px;
  font-size: 3.4rem;
  word-break: keep-all;
}


@media (max-width: 575.98px) { 
  .home-hero .carousel h1 {
    padding-bottom: 40px;
    font-size: 1.75rem;
  }
}

/*==============
INSTAGRAM TITLE
==============*/

.insta-link {
  font-family: "Stag", serif !important;
  font-size: 1.1rem !important;
  font-weight: 700 !important;
  color: white;
}

.insta-title {
  background-color: black;
}

#insta-feed {
  margin-top: 0px !important;
}

/*==============
VIDEO REVIEW MODAL
==============*/

.reviewVideo-dialog {
  max-width: 740px;
  height: auto;
  margin-top: 130px;
}

.reviewVideo-content{
  background-color: transparent;
  border: none;
}

.reviewVideo-but {
  color: red;
}

.reviewVideo-header {
  border: none;
}


@media (max-width: 576px) {
  #reviewVideo {
    width: 426px;
    height: 240px;
  }
  .reviewVideo-dialog {
    max-width: 500px;
    height: auto;
    margin-top: 100px;
  }
}

@media (max-width: 376px) {
  #reviewVideo {
    width: 330px;
    height: 200px;
  }
  .reviewVideo-dialog {
    max-width: 350px;
    height: auto;
    margin-top: 100px;
  }
}

