<div class="section-lg">
    <div class="container-fluid">
        <div class="row">
            <div class="col-4 offset-4">

                <h1 class="h2 sans mb-6">{{ 'customer.activate_account.title' | t }}</h1>
                <p>{{ 'customer.activate_account.subtext' | t }}</p>

                {% form 'activate_customer_password' %}
                    {%- if form.errors -%}
                        <div class="alert alert-light mb-3 text-danger" role="alert">
                            {{ form.errors | default_errors }}
                        </div>
                    {%- endif -%}

                    <div class="form-group">
                        <label for="activate-password">{{ 'customer.activate_account.password' | t }}</label>
                        <input type="password" class="form-control form-control-xl" name="customer[password]" id="activate-password">
                    </div>

                    <div class="form-group">
                        <label for="activate-password-confirmation">{{ 'customer.activate_account.password_confirm' | t }}</label>
                        <input type="password" class="form-control form-control-xl" name="customer[password_confirmation]" id="activate-password-confirmation">
                    </div>

                    <input type="submit" class="btn btn-block btn-dark btn-storelli" value="{{ 'customer.activate_account.submit' | t }}">
                {% endform %}

            </div>
        </div>
    </div>
</div>
