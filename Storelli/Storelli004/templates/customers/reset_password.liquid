<div class="form-reset-password">
    {% form 'reset_customer_password' %}
        <h1 class="h2 sans mb-6">{{ 'customer.reset_password.title' | t }}</h1>
        <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

        {%- if form.errors -%}
            <div class="alert alert-light mb-3 text-danger" role="alert">
                {{ form.errors | default_errors }}
            </div>
        {%- endif -%}

        <label for="reset-password">{{ 'customer.reset_password.password' | t }}</label>
        <input type="password" class="form-control form-control-xl {% if form.errors contains 'password' %}input-error{% endif %}" name="customer[password]" id="reset-password">

        <label for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
        <input type="password" class="form-control form-control-xl {% if form.errors contains 'password_confirmation' %}input-error{% endif %}" name="customer[password_confirmation]" id="PasswordConfirmation">

        <input type="submit" class="btn btn-block btn-dark btn-storelli" value="{{ 'customer.reset_password.submit' | t }}">
    {% endform %}
</div>
