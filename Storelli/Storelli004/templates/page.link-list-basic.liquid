{% style %}

.link-list-ul {
    padding-inline-start: 0;
    position: relative;
    text-decoration: none;
    text-align: center;
    list-style-type: none;
    z-index: 5;
    margin: 10px 0 20px 0;
}
.link-list-li {
  padding: 25px 0 25px 0;
  font-family: "StagSB", serif;
    font-size: 1.35rem;
    font-weight: 600;
    font-style: italic;
    line-height: 1;
    letter-spacing: 1px;
}

.link-list-btn {
    font-family: "Stag", serif;
    font-size: 1.45rem;
    font-weight: 600;
    font-style: italic;
    line-height: 1;
    letter-spacing: 1px;
    background-color: #fff;
    color: #252525;
    border: 1px solid #fff;
    border-radius: 25px;
    padding: 15px 10px;
}
.link-list-btn span {
  padding: 10px;
}  
.social-icon-list {
    padding-inline-start: 0;
    list-style-type: none;
    position: relative;
    padding-top: 40px;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    margin: 0 0 20px 0;
    z-index: 5;
}
.social-icon-list .icon {
    display: inline-block;
    height: 50px;
    vertical-align: middle;
    padding-left: 15px;
    padding-right: 15px;
    background: none;
	fill: #EEEEEE;
}
.social-icons .icon {
    
    height: 50px;
    background: none;
}

{% endstyle %}

<div class="section-lg dark-section page above">
  <div class="container-fluid link-list-div">
    <div class="row justify-content-center">
      <div class="col justify-content-center main-content text-center">
        <div class="row justify-content-center">
            <ul class="link-list-ul text-center">
              <a href="#glove-giveaway-form" class="link-list-link hide">
                  <li class="link-list-li">
                    <button class="link-list-btn" style="text-transform:uppercase" >
                      <span>Win Free Gloves for a Year</span>
                    </button>
                  </li>
                </a>
              <a href="https://storelli.com/collections/shop-all" class="link-list-link">
                  <li class="link-list-li">
                    <button class="link-list-btn" style="text-transform:uppercase" >
                      <span>Shop</span>
                    </button>
                  </li>
                </a>
              <a href="https://storelli.com/pages/help" class="link-list-link">
                  <li class="link-list-li">
                    <button class="link-list-btn" style="text-transform:uppercase" >
                      <span>Customer Support</span>
                    </button>
                  </li>
                </a>
              <a href="https://storelli.com/collections/gloves" class="link-list-link">
                  <li class="link-list-li">
                    <button class="link-list-btn" style="text-transform:uppercase" >
                      <span>Gloves</span>
                    </button>
                  </li>
                </a>
                
            </ul>
         
        </div>
        <div class="row justify-content-center">
           {% render "social-icons-coded" %}
        </div>
      </div>
      
    </div>
 
  </div>
  <div class="container-fluid link-list-after">
    <div class="row spacer-div" style="padding-bottom:50px;"></div>
  </div>
</div>
<div class="section-lg light-section page hide">
  <div class="container-fluid link-list-after">
    <div class="row spacer-div" style="padding-bottom:50px;"></div>
    <div id="glove-giveaway-form" class="row justify-content-center text-center email-form">
       <h2 class="h2" style="padding-top:90px;">Enter to Win.</h2>
    </div>
    <div id="klav-form-basic" class="klaviyo-form-XAiAz5 hide"></div>
