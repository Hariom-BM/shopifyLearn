.bm-sleep_supoort {
  background: linear-gradient(177.21deg, #dddddd 2.32%, #a3adbb 97.68%);
  padding: 50px 0;
  /* padding-bottom: 0; */
}
.swiperslider-sleep-support {
  max-width: 550px;
  margin: 0 auto;
  overflow: hidden;
  position: relative;
}
.bm-leftsleep-support .bm-col > div {
  width: 64px;
}
.bm-sleep_supoort .bm-container-md .font-ibm-mono {
  width: auto;
}
.bm-sleep_supoort .swiper-button-next::after,
.bm-sleep_supoort .swiper-button-prev::after {
  display: none;
}
.bm-sleep_supoort .swiper-button-next,
.bm-sleep_supoort .swiper-button-prev {
  position: absolute;
  top: 50%;
  z-index: 10;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--swiper-navigation-color, var(--swiper-theme-color));
  height: 36px;
  width: 36px;
  transform: translateY(-50%);
}
.bm-sleep_supoort .swiper-button-next {
  right: 28px;
}
.bm-sleep_supoort .swiper-button-prev {
  left: 28px;
  transform: rotate(180deg);
}
.bm-sleep_supoort .swiper-pagination-sleepsupoort {
  display: flex;
  gap: 8px;
  position: absolute;
  bottom: 10px;
  z-index: 1;
  justify-content: center;
}
.bm-sleep_supoort .bm-container-md > .bm-row {
  display: flex;
}
.bm-sleep_supoort .bm-row-main {
  display: flex;
}
.bm-sleep_supoort .bm-container-md .text-dark {
  font-weight: 500;
