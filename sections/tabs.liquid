<!-- In your Shopify Liquid section file -->
<div class="bm-knot-hero-tabs">
  <div class="bm-knot-inner-tabs">
    <div class="bm-tabs">
      {% for block in section.blocks %}
        {% if block.type == 'step' %}
          <div class="bm-step">
            <span>{{ block.settings.position }}</span>
            <div class="tab-content-wrapper">
              <div class="left-content">
                <p>{{ block.settings.description }}</p>
              </div>
              <div class="right-content">
                <img src="{{ block.settings.image-url | img_url: '568x383'  }}" alt="{{ block.settings.image_alt }}">
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "BM Knot Hero Tabs",
  "tag": "section",
  "class": "bm-knot-hero-tabs",
  "settings": [],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "text",
          "id": "position",
          "label": "Position"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "image-url",
          "label": "Image URL"
        },
        {
          "type": "text",
          "id": "image_alt",
          "label": "Image Alt Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "bm-knot-hero-tabs",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% style %}
    .bm-knot-inner-tabs{
      max-width:767px;
      margin:0 auto;
      min-height:473px;
    }

    .bm-step{
       flex:1;
    }
  .bm-step.active{
    border-bottom:2px solid
  }
    .bm-step.active span{
          background: #000;
    }
    .bm-tabs{
      display:flex;
      justify-content:space-between;
       border-bottom:1px solid;
      position:relative;
      flex-wrap:wrap;
    }


  .bm-step span{
    position:relative;
    z-index:999;
     color: #fff;
      width: 25px;
      height: 25px;
      border-radius: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      background: #0000001A;
    margin:0 auto;
    cursor:pointer;
    margin-bottom:16px;
  }

    .tab-content-wrapper{
      display:none;
      position:absolute;
      left:0;
      top:0;
      right:0;
    }

    .bm-step.active  .tab-content-wrapper{
      display:flex;
      padding:50px  0;
      flex-wrap:wrap;
    }

  .tab-content-wrapper >div{
    background:#fff;
    color:#000;
    padding:20px;
  }
{% endstyle %}

<script>
    console.log('kjbjjk ')

  document.querySelector('.bm-step').classList.add('active')
  function removeClass() {
   var remove=document.querySelectorAll('.bm-step span')
      remove.forEach(function (el) {
          el.parentElement.classList.remove('active')
  })
  }


  var checkActive=document.querySelectorAll('.bm-step span')
     checkActive.forEach(function (ele) {
          ele.addEventListener('click',function () {
          removeClass()
          ele.parentElement.classList.add('active')

     })
  })
</script>
