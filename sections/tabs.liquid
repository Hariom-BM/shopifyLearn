{% schema %}
{
  "name": "BM Knot Hero",
  "settings": [
    {
      "type": "text",
      "id": "productTitle",
      "label": "Product Title"
    },
    {
      "type": "textarea",
      "id": "productDescription",
      "label": "Product Description"
    },
    {
      "type": "text",
      "id": "indexImageUrl",
      "label": "Index Image URL"
    },
    {
      "type": "text",
      "id": "indexTitle",
      "label": "Index Title"
    },
    {
      "type": "textarea",
      "id": "indexDescription",
      "label": "Index Description"
    },
    {
      "type": "text",
      "id": "productName",
      "label": "Product Name"
    },
    {
      "type": "text",
      "id": "productSubtitle",
      "label": "Product Subtitle"
    },
    {
      "type": "textarea",
      "id": "productDescriptionLong",
      "label": "Product Long Description"
    },
    {
      "type": "text",
      "id": "productFeatures",
      "label": "Product Features",
      "info": "Enter each feature on a new line"
    }
  ],
  "presets": [
    {
      "name": "bm-knot-tabs",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<style>
  .bm-knot-hero img {
    max-width: 200px;
    height: auto;
  }
</style>

<div class="bm-knot-hero">
  <div class="bm-knot-inner">
    <div class="bm-knot-left">
      <div class="img-wrapper">
        <img src="{{ section.settings.indexImageUrl }}" alt="">
      </div>
      <div class="bm-knot-batch">
        <p>{{ section.settings.productTitle }}</p>
      </div>
      <div class="text-line">
        <p>{{ section.settings.productDescription }}</p>
      </div>
      <div class="bm-index-wrapper">
        <div class="index">
          <div class="index-img">
            <img src="{{ section.settings.indexImageUrl }}" alt="">
          </div>
          <div class="text-wrapper">
            <h5>{{ section.settings.indexTitle }}</h5>
            <p>{{ section.settings.indexDescription }}</p>
          </div>
        </div>
      </div>
    </div>

    <div class="bm-knot-right">
      <h1>{{section.settings.settings.productName }}</h1>
      <p>
        <span>{{ section.settings.productSubtitle }}</span>
        {{ section.settings.productDescriptionLong }}
      </p>
      <ul>
        {% for feature in settings.productFeatures  %}
        <li>{{ feature }}</li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
