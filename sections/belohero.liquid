<div class="bm-knot-hero">
  <div class="bm-knot-inner">
    <div class="bm-knot-left">
      <div class="img-wrapper">
        <img src="{{ indexImageUrl }}" alt="">
      </div>
      <div class="bm-knot-batch">
        <p>{{ productTitle }}</p>
      </div>
      <div class="text-line">
        <p>{{ productDescription }}</p>
      </div>
      <div class="bm-index-wrapper">
        <div class="index">
          <div class="index-img">
            <img src="{{ indexImageUrl }}" alt="">
          </div>
          <div class="text-wrapper">
            <h5>{{ indexTitle }}</h5>
            <p>{{ indexDescription }}</p>
          </div>
        </div>
      </div>
    </div>

    <div class="bm-knot-right">
      <h1>{{ productName }}</h1>
      <p>
        <span>{{ productSubtitle }}</span>
        {{ productDescriptionLong }}
      </p>
      <ul>
        {% for feature in productFeatures %}
        <li>{{ feature }}</li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>



{% schema %}
{
  "name": "BM Knot Hero",
  "settings": [
    {
      "type": "text",
      "id": "productTitle",
      "label": "Product Title"
    },
    {
      "type": "textarea",
      "id": "productDescription",
      "label": "Product Description"
    },
    {
      "type": "image_picker",
      "id": "indexImageUrl",
      "label": "Index Image URL"
    },
    {
      "type": "text",
      "id": "indexTitle",
      "label": "Index Title"
    },
    {
      "type": "textarea",
      "id": "indexDescription",
      "label": "Index Description"
    },
    {
      "type": "text",
      "id": "productName",
      "label": "Product Name"
    },
    {
      "type": "text",
      "id": "productSubtitle",
      "label": "Product Subtitle"
    },
    {
      "type": "textarea",
      "id": "productDescriptionLong",
      "label": "Product Long Description"
    },
    {
      "type": "text",
      "id": "productFeatures",
      "label": "Product Features",
      "info": "Enter each feature on a new line"
    }
  ],
  "presets": [
    {
      "name": "bm-knot-hero",
      "category": "Custom"
    }
  ]
}
{% endschema %}

