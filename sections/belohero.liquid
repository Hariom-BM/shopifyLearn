<div class="bm-knot-hero">
  <div class="bm-knot-inner">
    <div class="bm-knot-left">
      <div class="img-wrapper">
        <img src="{{ section.settings.heroImageUrl | asset_url   }}" alt="" width:250x>
      </div>
      <div class="bm-knot-batch">
        <p>{{ section.settings.productTitle }}</p>
      </div>
      <div class="text-line">
        <p>{{ section.settings.productDescription }}</p>
      </div>
      <div class="bm-index-wrapper">
        <div class="index">
          <div class="index-img">
            <img src="{{ section.settings.indexImageUrl | asset_url  }}" alt=""  width:500x>
          </div>
          <div class="text-wrapper">
            <h5>{{ section.settings.indexTitle }}</h5>
            <p>{{ section.settings.indexDescription }}</p>
          </div>
        </div>
      </div>
    </div>

    <div class="bm-knot-right">
      <h1>{{ section.settings.productName }}</h1>
      <p>
        <span>{{ section.settings.productSubtitle }}</span>
        {{ section.settings.productDescriptionLong }}
      </p>
      <ul>
        {% for feature in productFeatures %}
        <li>{{ section.settings.feature }}</li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>



{% schema %}
{
  "name": "BM Knot Hero",
  "settings": [
    {
      "type": "text",
      "id": "productTitle",
      "label": "Product Title"
    },
    {
      "type": "textarea",
      "id": "productDescription",
      "label": "Product Description"
    },
    {
      "type": "image_picker",
      "id": "heroImageUrl",
      "label": "hero Image URL"
    },
     {
      "type": "image_picker",
      "id": "indexImageUrl",
      "label": "Index Image URL"
    },
    {
      "type": "text",
      "id": "indexTitle",
      "label": "Index Title"
    },
    {
      "type": "textarea",
      "id": "indexDescription",
      "label": "Index Description"
    },
    {
      "type": "text",
      "id": "productName",
      "label": "Product Name"
    },
    {
      "type": "text",
      "id": "productSubtitle",
      "label": "Product Subtitle"
    },
    {
      "type": "textarea",
      "id": "productDescriptionLong",
      "label": "Product Long Description"
    },
    {
      "type": "text",
      "id": "productFeatures",
      "label": "Product Features",
      "info": "Enter each feature on a new line"
    }
  ],
  "presets": [
    {
      "name": "bm-knot-hero",
      "category": "Custom"
    }
  ]
}
{% endschema %}





{% style %}
.bm-knot-inner{
  display:flex;
}

{% endstyle %}

